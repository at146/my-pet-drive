# Example environment variables for the backend
# Copy this file to `.env` and fill real values (do NOT commit secrets).

# Domain
# This would be set to the production domain with an env var on deployment
# used by Traefik to transmit traffic and aqcuire TLS certificates
# DOMAIN=localhost
# To test the local Traefik config
DOMAIN=localhost.tiangolo.com

STACK_NAME=my-pet-drive

# SheetDB endpoint (must include API path)
SHEETDB_URL=https://sheetdb.io/api/v1/your_sheetdb_id

# Telegram bot token (from BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# Chat IDs
# ADMIN_CHAT — admin user or group chat id (e.g. 209183016)
ADMIN_CHAT=your_admin_chat_id
# DRIVERS_CHAT — chat id for drivers channel (may be a negative number for groups)
DRIVERS_CHAT=your_drivers_chat_id

# Robokassa payment gateway credentials
MERCHANT=your_robokassa_merchant_name
PASS1=your_robokassa_password1

# Optional: server port (default 3000)
PORT=3000

# Configure these with your own Docker registry images
DOCKER_IMAGE_BACKEND=my-pet-drive-backend
DOCKER_IMAGE_FRONTEND=my-pet-drive-frontend
TAG="0.1.0"
